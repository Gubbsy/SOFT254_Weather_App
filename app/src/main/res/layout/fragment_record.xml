<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontend.RecordFragment">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="14dp">

      <TextView
          android:id="@+id/record_instructions"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20dp"
          android:text="@string/record_instructions"
          android:textAlignment="center"
          android:textStyle="bold"/>

      <TextView
          android:id="@+id/feels_like_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/feels_like"
          android:textSize="25dp"
          android:layout_marginTop="25dp"
          android:layout_alignParentLeft="true"
          android:layout_below="@id/record_instructions"/>

      <TextView
          android:id="@+id/weather_type_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/weather_type"
          android:layout_below="@id/feels_like_text"
          android:textSize="25dp"
          android:layout_marginTop="20dp"
          android:layout_alignParentLeft="true"/>

      <TextView
          android:id="@+id/wind_direction_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/wind_direction"
          android:layout_below="@id/weather_type_text"
          android:textSize="25dp"
          android:layout_marginTop= "20dp"
          android:layout_alignParentLeft="true"/>

      <TextView
          android:id="@+id/wind_speed_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/wind_speed"
          android:layout_below="@id/wind_direction_text"
          android:textSize="25dp"
          android:layout_marginTop= "20dp"
          android:layout_alignParentLeft="true"/>

      <TextView
          android:id="@+id/pressure_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/pressure"
          android:layout_below="@id/wind_speed_text"
          android:textSize="25dp"
          android:layout_marginTop= "30dp"
          android:layout_alignParentLeft="true"/>

      <TextView
          android:id="@+id/recorded_temp_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/recorded_temp"
          android:layout_below="@id/pressure_text"
          android:textSize="25dp"
          android:layout_marginTop= "10dp"
          android:layout_alignParentLeft="true"/>

      <EditText
          android:id="@+id/feels_like_editText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignBottom="@+id/feels_like_text"
          android:layout_marginStart="18dp"
          android:layout_toEndOf="@+id/recorded_temp_text"
          android:textSize="20dp"
          android:inputType="number"
          android:textAlignment="center"/>

      <Spinner
          android:id="@+id/weather_type_spinner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/weather_type_text"
          android:layout_alignBottom="@+id/weather_type_text"
          android:layout_alignStart="@+id/feels_like_editText" />

      <Spinner
          android:id="@+id/wind_direction_spinner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/wind_direction_text"
          android:layout_alignParentEnd="true"
          android:layout_alignStart="@+id/wind_speed_editText" />

      <EditText
          android:id="@+id/wind_speed_editText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignBottom="@+id/wind_speed_text"
          android:layout_marginStart="18dp"
          android:layout_toEndOf="@+id/recorded_temp_text"
          android:textSize="20dp"
          android:inputType="number"
          android:textAlignment="center"/>

      <TextView
          android:id="@+id/pressure_recorded"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/pressure_text"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="18dp"
          android:layout_toEndOf="@+id/recorded_temp_text"
          android:text="0"
          android:textAlignment="center"
          android:textSize="20dp" />

      <TextView
          android:id="@+id/temp_recorded"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignBottom="@+id/recorded_temp_text"
          android:layout_marginStart="18dp"
          android:layout_toEndOf="@+id/recorded_temp_text"
          android:textSize="20dp"
          android:textAlignment="center"
          android:text="0"/>

      <Button
          android:id="@+id/button_submit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/temp_recorded"
          android:layout_marginTop="20dp"
          android:text="@string/submit"
          android:textSize="20dp" />

      <Button
          android:id="@+id/button_clear"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/button_submit"
          android:layout_marginTop="10dp"
          android:text="@string/clear"
          android:textSize="20dp" />






  </RelativeLayout>
</FrameLayout>